<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fond"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.westfolk.smartroadv2.ProximityAlert">


    <Button
        android:text="Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/send"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Add proximity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/proximity"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Time in second : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:textSize="18sp"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/predict"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Current checkpoint : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="79dp"
        android:id="@+id/checkpointText"
        android:textSize="18sp"
        android:layout_above="@+id/proximity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Arrived at :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:id="@+id/predictHour"
        android:textSize="18sp"
        android:layout_above="@+id/checkpointText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Prediction : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/predict"
        android:textSize="18sp"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/arrivedIn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Arrived in :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrivedIn"
        android:textSize="18sp"
        android:layout_above="@+id/predictHour"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp" />

</RelativeLayout>
